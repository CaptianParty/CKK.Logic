<Window x:Class="CKK.UI.LoginWPF"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CKK.UI"
        mc:Ignorable="d"
        Title="LoginWPF" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Label Margin="3" VerticalAlignment="Center" Content="Username:" />
            <TextBox x:Name="usernameTextBox" Margin="3" Width="100" VerticalAlignment="Center" RenderTransformOrigin="1.185,1.395"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" RenderTransformOrigin="1.307,0.407">
            <Label Content="Password:" VerticalAlignment="Center" Margin="6 ,50 ,0, 0"/>
            <PasswordBox x:Name="passwordBox" Margin="6, 50, 0, 0" Width="100" VerticalAlignment="Center" Password="password"
                         />
        </StackPanel>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0, 50">
            <Label Content="Please Login" FontSize="50" FontWeight="ExtraBold"/>
        </StackPanel>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,100,0,0">
            <Button Content="Forgot Password" FontSize="10" Background="White" BorderThickness="0" 
                    FontStyle="Oblique" FontWeight="Normal" Foreground="Blue"/>
        </StackPanel>
        
        <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="0,200,0,0">
            <Button Content="Login" FontStretch="Expanded" FontSize="50" FontWeight="Bold" Click="loginButton_Click"/>
        </StackPanel>

        



    </Grid>
</Window>

<Window x:Class="CKK.UI.EditItem"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CKK.UI"
        mc:Ignorable="d"
        Title="EditItem" Height="403" Width="559">
    <Grid>
        <!--ID ROW-->

        <Label Height="auto" Width="auto" FontSize="25" Content="Id:" VerticalAlignment="Top" HorizontalAlignment="Left" 
            Margin="47,58,0,0"/>

        <TextBlock x:Name="idTextBox" VerticalAlignment="Top" Width="222"
            Margin="130,67,448,0" Padding="5"
            ToolTip="Numbers only" />

        <!--NAME ROW-->

        <Label Content="Name:" FontSize="25" VerticalAlignment="Top" HorizontalAlignment="Left"
            Margin="24,112,0,0"/>

        <TextBox x:Name="nameTextBox" VerticalAlignment="Top" HorizontalAlignment="Left" Width="222" 
            Padding="5" Margin="130,119,0,0"/>

        <!--PRICE ROW-->

        <Label Content="Price:" FontSize="25" VerticalAlignment="Top" HorizontalAlignment="Left"
            Margin="31,165,0,0"/>

        <TextBox x:Name="priceTextBox" VerticalAlignment="Top" HorizontalAlignment="Left" Width="222" Padding="5"
            ToolTip="Numbers only" Margin="130,172,0,0"/>

        <!--QUANTITY ROW-->

        <Label Content="Quantity:" FontSize="25" HorizontalAlignment="Left" VerticalAlignment="Top"
            Margin="10,218,0,0"/>

        <TextBox x:Name="quantityTextBox" VerticalAlignment="Top" HorizontalAlignment="Left" Width="222" Padding="5"
            ToolTip="Numbers only" Margin="130,226,0,0"/>
        <Button x:Name="btSave"  Content="Save" FontSize="25" HorizontalAlignment="Left" Margin="24,302,0,0" VerticalAlignment="Top" Height="55" Width="176" Click="btSave_Click"/>
        <Button x:Name="btCancel"  Content="Cancel" FontSize="25" HorizontalAlignment="Left" Margin="348,302,0,0" VerticalAlignment="Top" Height="55" Width="176" Click="btCancel_Click"/>


    </Grid>
</Window>

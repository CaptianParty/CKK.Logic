<Window x:Class="CKK.UI.ForgotPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CKK.UI"
        mc:Ignorable="d"
        Title="ForgotPassword" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="350" >
            <Label Content="Forgotten Password" FontSize="32" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Label Content="ID:" Width="80" VerticalAlignment="Center"/>
                <TextBox x:Name="employeeIdTextBox" Width="180" VerticalAlignment="Center"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Label Content="New Password:" Width="Auto" VerticalAlignment="Center"/>
                <PasswordBox x:Name="newPasswordBox" Width="180" VerticalAlignment="Center"/>
            </StackPanel>

            <Button Content="Save Password" FontSize="18" FontWeight="Bold" Click="saveButton_Click" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>
